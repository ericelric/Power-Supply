= simple_form_for @power do |f|
  .form-group
    = f.input :title, input_html: {class: 'form-control'}, required: true
  .form-group
    = f.input :code_on, input_html: {class: 'form-control'}, required: true
  .form-group
    = f.input :code_off, input_html: {class: 'form-control'}, required: true

  = f.submit ( f.object.new_record? ? "Create" : "Update"),  class: 'btn btn-primary'
  = link_to 'Cancel', root_path, class:'btn btn-default'
